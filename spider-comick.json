{
  "spider": {
    "id": "comick_full",
    "name": "Comick Full",
    "description": "Scrapes search results and profile metadata from comick.live",
    "types": {
      "fields": [
        { "name": "manga_id", "type": "string" },
        { "name": "manga_name", "type": "string" },
        { "name": "manga_image", "type": "url" },
        { "name": "manga_description", "type": "string" },
        { "name": "genres", "type": "string[]" },
        { "name": "manga_chapters", "type": "object[]" }
      ]
    },
    "targetUrl": "https://comick.live/search?q={query}",
    "itemConfig": {
      "selector": "script#sv-data",
      "ProfileLink": {
        "selector": "script#sv-data",
        "attribute": "data-slug"
      },
      "ProfileTarget": {
        "Url": { "selector": "script#sv-data", "attribute": "data-slug" },
        "Image": { "selector": "script#sv-data", "attribute": "data-thumbnail" },
        "Name": { "selector": "script#sv-data" },
        "Description": { "selector": "script#sv-data" },
        "Genres": { "selector": "script#sv-data", "multiple": true },
        "MangaID": { "selector": "script#sv-data", "attribute": "data-id" },
        "Chapters": { "selector": "script#sv-data", "attribute": "data-chapters" }
      },
      "profileById": {
        "urlPattern": "https://comick.live/comic/{manga_id}",
        "ProfileTarget": {
          "Url": { "selector": "script#comic-data", "attribute": "data-slug" },
          "Image": { "selector": "script#comic-data", "attribute": "data-thumbnail" },
          "Name": { "selector": "script#comic-data" },
          "Description": { "selector": "script#comic-data" },
          "Genres": { "selector": "script#comic-data", "multiple": true },
          "MangaID": { "selector": "script#comic-data", "attribute": "data-id" },
          "Chapters": { "selector": "script#comic-data", "attribute": "data-chapters" }
        }
      }
    }
  }
}
