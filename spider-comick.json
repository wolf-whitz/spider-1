{
  "spider": {
    "id": "comick_full",
    "name": "Comick Full",
    "description": "Scrapes search results and profile metadata from comick.live",
    "types": {
      "fields": [
        { "name": "manga_id", "type": "string" },
        { "name": "manga_name", "type": "string" },
        { "name": "manga_image", "type": "url" },
        { "name": "manga_description", "type": "string" },
        { "name": "genres", "type": "string[]" },
        { "name": "manga_chapters", "type": "object[]" },
        { "name": "page_num", "type": "number" }
      ]
    },
    "targetUrl": "https://comick.live/search?q={query}",
    "itemConfig": {
      "selector": "script#sv-data",
      "ProfileTarget": {
        "Url": {
          "selector": "script#sv-data",
          "attribute": "",
          "parseScriptJson": true,
          "jsonPath": "data[*].slug"
        },
        "Image": {
          "selector": "script#sv-data",
          "attribute": "",
          "parseScriptJson": true,
          "jsonPath": "data[*].default_thumbnail"
        },
        "Name": {
          "selector": "script#sv-data",
          "attribute": "",
          "parseScriptJson": true,
          "jsonPath": "data[*].title"
        },
        "Description": {
          "selector": "script#sv-data",
          "attribute": "",
          "parseScriptJson": true,
          "jsonPath": "data[*].description"
        },
        "Genres": {
          "selector": "script#sv-data",
          "multiple": true,
          "attribute": "",
          "parseScriptJson": true,
          "jsonPath": "data[*].genres[*].name"
        },
        "MangaID": {
          "selector": "script#sv-data",
          "attribute": "",
          "parseScriptJson": true,
          "jsonPath": "data[*].id"
        },
        "Chapters": {
          "selector": "script#sv-data",
          "multiple": true,
          "attribute": "",
          "parseScriptJson": true,
          "jsonPath": "data[*].last_chapter"
        }
      },
      "profileById": {
        "urlPattern": "https://comick.live/comic/{manga_id}",
        "ProfileTarget": {
          "Url": {
            "selector": "script#comic-data",
            "attribute": "",
            "parseScriptJson": true,
            "jsonPath": "comic.slug"
          },
          "Image": {
            "selector": "script#comic-data",
            "attribute": "",
            "parseScriptJson": true,
            "jsonPath": "comic.thumbnail"
          },
          "Name": {
            "selector": "script#comic-data",
            "attribute": "",
            "parseScriptJson": true,
            "jsonPath": "comic.title"
          },
          "Description": {
            "selector": "script#comic-data",
            "attribute": "",
            "parseScriptJson": true,
            "jsonPath": "comic.desc"
          },
          "Genres": {
            "selector": "script#comic-data",
            "multiple": true,
            "attribute": "",
            "parseScriptJson": true,
            "jsonPath": "comic.genres[*].name"
          },
          "MangaID": {
            "selector": "script#comic-data",
            "attribute": "",
            "parseScriptJson": true,
            "jsonPath": "comic.id"
          },
          "Chapters": {
            "selector": "script#comic-data",
            "multiple": true,
            "attribute": "",
            "parseScriptJson": true,
            "jsonPath": "chapters"
          }
        }
      }
    }
  }
}
