{
  "spider": {
    "id": "comick_full",
    "name": "Comick Full",
    "description": "Scrapes search results and profile metadata from comick using embedded JSON in <script> tags",
    "types": {
      "fields": [
        { "name": "manga_id", "type": "string" },
        { "name": "manga_name", "type": "string" },
        { "name": "manga_image", "type": "url" },
        { "name": "manga_description", "type": "string" },
        { "name": "genres", "type": "string[]" },
        { "name": "manga_chapters", "type": "object[]" }
      ]
    },
    "targetUrl": "https://comick.art/search?q={query}",
    "itemConfig": {
      "source": "script#sv-data",
      "jsonPath": "$.data[*]",
      "ProfileLink": {
        "jsonPath": "$.slug",
        "formatter": "https://comick.live/comic/{value}"
      },
      "ProfileTarget": {
        "manga_id": { "jsonPath": "$.id" },
        "manga_name": { "jsonPath": "$.title" },
        "manga_image": { "jsonPath": "$.default_thumbnail" },
        "manga_description": { "jsonPath": "$.description" },
        "genres": { "jsonPath": "$.titles[*]", "multiple": true }
      },
      "profileById": {
        "urlPattern": "https://comick.live/comic/{manga_id}",
        "ProfileTarget": {
          "source": "script#comic-data",
          "manga_id": { "jsonPath": "$.id" },
          "manga_name": { "jsonPath": "$.title" },
          "manga_image": { "jsonPath": "$.default_thumbnail" },
          "manga_description": { "jsonPath": "$.desc" },
          "manga_chapters": {
            "jsonPath": "$.firstChapters[*]",
            "fields": {
              "chapter_id": { "jsonPath": "$.id" },
              "chapter_num": { "jsonPath": "$.chap" },
              "chapter_lang": { "jsonPath": "$.lang" },
              "chapter_group": { "jsonPath": "$.group_name" }
            }
          }
        }
      }
    }
  }
}
