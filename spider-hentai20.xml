<Spider name="Hentai20_Search" description="Scrapes search results from hentai20.io">
  <Types>
    <Field name="manga_name" type="string" />
    <Field name="manga_image" type="url" />
    <Field name="manga_description" type="string" />
    <Field name="genres" type="string[]" />
  </Types>
  <Target url="https://hentai20.io/?s={query}">
    <Item selector="#content .wrapper .postbody .bixbox .listupd .bs">
      <ProfileLink selector="a" attribute="href" />
      <ProfileTarget>
        <Url selector="a" attribute="href" />
        <Image selector="img.ts-post-image" attribute="src" />
      </ProfileTarget>
      <Name selector=".tt" />
      <HighlightText selector=".summary" optional="true" />
      <Genres selector=".type, .colored" multiple="true" optional="true" />
    </Item>
  </Target>
  <Output type="json">
    <Filename pattern="search_results_hentai20.json" />
  </Output>
  <Options>
    <LazyLoad autoScroll="true" delay="500" />
    <MaxRetries count="3" />
    <ConcurrentRequests count="5" />
  </Options>
</Spider>
